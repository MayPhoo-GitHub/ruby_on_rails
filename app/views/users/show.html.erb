<%= stylesheet_link_tag "form.css" %>
<div class="container">
  <h2>User Detail</h2>
  <div class="card-body">
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">ID</label>
      <div class="col-sm-10">
        <label class="col-sm-10 col-form-label"><%= @user.id  %></label>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Name</label>
      <div class="col-sm-10">
        <label class="col-sm-10 col-form-label"><%= @user.name  %></label>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-10">
        <label class="col-sm-10 col-form-label"><%= @user.email  %></label>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Phone</label>
      <div class="col-sm-10">
        <label class="col-sm-10 col-form-label"><%= @user.phone  %></label>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Address</label>
      <div class="col-sm-10">
        <label class="col-sm-10 col-form-label"><%= @user.address  %></label>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Birthday</label>
      <div class="col-sm-10">
        <label class="col-sm-10 col-form-label"><%= @user.birthday %></label>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Type</label>
      <div class="col-sm-10">
        <label class="col-sm-10 col-form-label">
        <%= @user.super_user_flag == true ? "Super User" : "Normal User" %>
      </div>
    </div> </br>
    <% if current_user.super_user_flag %>
      <%= link_to "Edit Info", edit_user_path(@user), class: "btn-submit" %>
      <%= link_to "Delete", user_path,
          method: :delete,
          data: { confirm: "Are you sure to delete?" }, class: "btn-delete" %>
    <% end %>
  </div>
</div>
