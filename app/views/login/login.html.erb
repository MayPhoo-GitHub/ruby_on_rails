<div class="pt-5">
  <h1 class="text-center">Log In</h1>
  <div class="row">
    <div class = "card col-md-5 mx-auto round_corner">
      <div class="card-body">
      
      <%= notice %>

        <%= form_with(url: login_path, scope: :session, local: true) do |form| %>
          <div class="form-group">
            <%= form.label :email, class: "required" %>
            <%= form.email_field :email, class: 'form-control' %>
            <% if @errors %>
              <%= @errors.inspect %>
            <% end %>
          </div>
          <div class="form-group">
            <%= form.label :password, class: "d-flex flex-row align-items-center required" %>
            <%= form.password_field :password, class: 'form-control' %>
            <a class="ml-auto border-link small-xl" href="#">Forget?</a>
          </div>
          <div class="form-group pt-1">
            <button class="btn btn-dark btn-block" type="submit">Log In</button>
          </div>
          <p class="small-xl pt-3 text-center">
            <span class="text-muted">Not a member?</span>
            <%= link_to "Sign Up", new_user_users_path %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
.round_corner{
  border-radius : 10px;
  box-shadow: 10px 10px 10px 10px rgb(0 0 0 / 20%)
}
</style>